<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyConference.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyConference"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Schedule">
            <ShellContent
                Title="Day 1"
                ContentTemplate="{DataTemplate pages:SchedulePage}"
                Route="ScheduleDay1" />
            <ShellContent
                Title="Day 2"
                ContentTemplate="{DataTemplate pages:SchedulePage}"
                Route="ScheduleDay2" />
        </Tab>
        <Tab Title="My Agenda">
            <ShellContent
                Title="Day 1"
                ContentTemplate="{DataTemplate pages:AgendaPage}"
                Route="MyAgendaDay1" />

            <ShellContent
                Title="Day 2"
                ContentTemplate="{DataTemplate pages:AgendaPage}"
                Route="MyAgendaDay2" />
        </Tab>
        <Tab Title="Sponsors">
            <ShellContent
                Title="Sponsors"
                ContentTemplate="{DataTemplate pages:SponsorsPage}"
                Route="Sponsors" />
        </Tab>
    </TabBar>
    
</Shell>
